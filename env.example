# Environment Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database Configuration
# PostgreSQL (production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/linear_agent
# SQLite (development - default)
DATABASE_URL=sqlite+aiosqlite:///./linear_agent.db
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_TTL_SECONDS=3600

# Linear API Configuration
LINEAR_API_URL=https://api.linear.app/graphql
LINEAR_CLIENT_ID=your_linear_client_id
LINEAR_CLIENT_SECRET=your_linear_client_secret
LINEAR_WEBHOOK_SECRET=your_webhook_secret

# Claude Code Configuration
CLAUDE_CODE_BINARY=claude
CLAUDE_MAX_CONCURRENT_SESSIONS=5
CLAUDE_SESSION_TIMEOUT_MINUTES=60
CLAUDE_DEFAULT_MODEL=claude-3-sonnet-20240229

# Git Configuration
GIT_WORKTREE_BASE_PATH=/tmp/linear-agent/worktrees
GIT_CLEANUP_HOURS=24
GIT_MAX_WORKTREES_PER_REPO=10

# Security Configuration
SECRET_KEY=your-secret-key-at-least-32-characters-long
ENCRYPTION_KEY=your-encryption-key-for-tokens
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=your_sentry_dsn_for_error_tracking